set guioptions=em
set guioptions-=m  "remove menu bar
set guioptions-=T  "remove toolbar
set guioptions-=r  "remove right-hand scroll barset showtabline=2
set guioptions=aAce

set lines=60 columns=75
set t_Co=256
set background=dark

let g:obviousModeInsertHi = "guibg=Black guifg=White"
let g:solarized_termcolors=256    "default value is 16
let g:solarized_contrast="high"    "default value is normal
let g:solarized_visibility="high"    "default value is normal
let g:solarized_diffmode="high"    "default value is normal
let g:solarized_hitrail=1    "default value is 0

if has("unix")
  let s:uname = system("echo -n \"$(uname)\"")
  if !v:shell_error && s:uname == "Linux"
     " Linux-specific settings
     colorscheme solarized
     set guifont=Inconsolata\ Medium\ 10
     "" Sane copy-paste for gVim
     vmap <C-c> "+yi
     vmap <C-x> "+c
     vmap <C-v> c<ESC>"+p
     imap <C-v> <ESC>"+pa
  else
    " OSX-specific settings
     colorscheme solarized
     set guifont=Menlo\ Regular:h11
     set transparency=15
    " We don't want to use the ctags command shipped by OS X
     let Tlist_Ctags_Cmd = '/usr/local/bin/ctags'
     " Fullscreen takes up entire screen
     set fuoptions=maxhorz,maxvert"
  endif
endif
set
